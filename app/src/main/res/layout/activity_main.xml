<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonStartWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Work"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWorkStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Work Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStartWork" />

    <Button
        android:id="@+id/buttonResetStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset Work Status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonWorkStatus" />

    <Button
        android:id="@+id/buttonRetryWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Retry Worker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResetStatus" />


</androidx.constraintlayout.widget.ConstraintLayout>